<p><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 picture-panel"></div>
  </div>
  <div class="card">
    <div class="card-header">
    </div>
    <div class="card-body">
      <%= image_tag(@picture.postimage.url) %>
   </div>
   <div class="card-header">
     <%= @picture.content %>
   </div>
   <div class="card-header">
     <% unless @picture.user_id == current_user.id %>
       <% if @favorite.present? %>
         <%= link_to 'お気に入りを解除する', favorite_path(pictures_id: @favorite.id), method: :delete, class: 'btn btn-danger test' %>
       <% else %>
         <%= link_to 'お気に入りする', favorites_path(picture_id: @picture.id), method: :post, class: 'heart' %>
       <% end %>
     <% end %>
   </div>
 </div>
</div>
